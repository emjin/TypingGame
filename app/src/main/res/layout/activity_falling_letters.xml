<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/analemma"
    tools:context="analemma.typinggame.FallingLetters"
    android:id="@+id/activity_falling_letters">


    <!--ImageView android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/analemma" /-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Level: 1 "
            android:gravity="end"

            android:textColor="#DDDD22"
            />

        <TextView android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Score: 0 "
            android:gravity="end"
            android:textColor="#DDDD22"
            android:layout_above="@id/level"
            />

        <TextView android:id="@+id/letsleft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Escaped: "
            android:gravity="end"
            android:textColor="#DDDD22"
            />

    </LinearLayout>


</RelativeLayout>
